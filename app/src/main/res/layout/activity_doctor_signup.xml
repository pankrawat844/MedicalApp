<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="signup"
            type="com.app.medicalapp.activity.auth.signup.doc.DoctorSignUp" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/custom_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="38dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="28dp"
                        android:background="#00000000"
                        android:fontFamily="@font/open_sans_regular"
                        android:hint="UserName"
                        android:text="Dr.Shyam"
                        android:textColor="@color/white"
                        android:textColorHint="#80ffffff"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/add_clinic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8.8dp"
                        android:background="#00000000"
                        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                        android:fontFamily="@font/open_sans_regular"
                        android:hint="ADD CLINIC"
                        android:onClick="@{signup::addClinicDetails}"
                        android:textColor="@color/white"
                        android:textColorHint="#80ffffff" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="9dp"
                        android:background="#E6ffffff" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="38.8dp"
                android:layout_marginRight="38dp"
                android:background="#00000000"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:fontFamily="@font/open_sans_regular"
                android:hint="EDUCATION QUALIFICATION"
                android:onClick="@{signup::educationDetails}"
                android:textColor="@color/white"
                android:textColorHint="#80ffffff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="38dp"
                android:background="#E6ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="38.8dp"
                android:layout_marginRight="38dp"
                android:background="#00000000"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:fontFamily="@font/open_sans_regular"
                android:hint="REGISTRATION DETAILS"
                android:onClick="@{signup::registrationDetails}"
                android:textColor="@color/white"
                android:textColorHint="#80ffffff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="38dp"
                android:background="#E6ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="38.8dp"
                android:layout_marginRight="38dp"
                android:background="#00000000"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:fontFamily="@font/open_sans_regular"
                android:hint="SPECIALIZATION"
                android:onClick="@{signup::specializationDetails}"
                android:textColor="@color/white"
                android:textColorHint="#80ffffff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="38dp"
                android:background="#E6ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="38.8dp"
                android:layout_marginRight="38dp"
                android:background="#00000000"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:fontFamily="@font/open_sans_regular"
                android:hint="@string/experience"
                android:onClick="@{signup::experienceDetails}"
                android:textColor="@color/white"
                android:textColorHint="#80ffffff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="38dp"
                android:background="#E6ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="38.8dp"
                android:layout_marginRight="38dp"
                android:background="#00000000"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:fontFamily="@font/open_sans_regular"
                android:hint="@string/consultation_fees"
                android:onClick="@{signup::consultationFees}"
                android:textColor="@color/white"
                android:textColorHint="#80ffffff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="38dp"
                android:background="#E6ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="38.8dp"
                android:layout_marginRight="38dp"
                android:background="#00000000"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:fontFamily="@font/open_sans_regular"
                android:hint="@string/bank_details"
                android:onClick="@{signup::bankDetails}"
                android:textColor="@color/white"
                android:textColorHint="#80ffffff" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="38dp"
                android:background="#E6ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="38.3dp"
                android:layout_marginRight="38dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rect_whitefull"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:onClick="@{signup::nextButtonClick}"
                android:padding="20dp"
                android:text="NEXT"
                android:textColor="@color/black"
                android:textSize="13.4sp" />
        </LinearLayout>
    </ScrollView>
</layout>
